<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.jdha.codedivider</id>
    <name>code-divider</name>
    <vendor>j-d-ha</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.github.jdha.codedivider.settings.CodeDividerSettingsState"
        />

        <applicationConfigurable
                parentId="tools"
                instance="com.github.jdha.codedivider.settings.CodeDividerSettingsConfigurable"
                id="org.intellij.sdk.settings.AppSettingsConfigurable"
                displayName="Code Divider"
        />
    </extensions>

    <actions>
        <!-- ── Lines - Normal ───────────────────────────────────────────────────────────────────────────────────── -->
        <action id="com.github.jdha.codedivider.action.CodeDividerLineTextLeftNormal"
                class="com.github.jdha.codedivider.action.CodeDividerLineTextLeftNormal"
                text="Code Divider - Line - Normal - Text Left"
                description="Code Divider - Normal line with text to left.">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>

        <action id="com.github.jdha.codedivider.action.CodeDividerLineTextCenterNormal"
                class="com.github.jdha.codedivider.action.CodeDividerLineTextCenterNormal"
                text="Code Divider - Line - Normal - Text Center"
                description="Code Divider - Normal line with text in the center.">
            <add-to-group group-id="ToolsMenu" anchor="after"
                          relative-to-action="com.github.jdha.codedivider.action.CodeDividerLineTextLeftNormal"/>
        </action>

        <action id="com.github.jdha.codedivider.action.CodeDividerLineTextRightNormal"
                class="com.github.jdha.codedivider.action.CodeDividerLineTextRightNormal"
                text="Code Divider - Line - Normal - Text Right"
                description="Code Divider - Normal line with text to right.">
            <add-to-group group-id="ToolsMenu" anchor="after"
                          relative-to-action="com.github.jdha.codedivider.action.CodeDividerLineTextCenterNormal"/>
        </action>

        <!-- ── Lines - Heavy ────────────────────────────────────────────────────────────────────────────────────── -->
        <action id="com.github.jdha.codedivider.action.CodeDividerLineTextLeftHeavy"
                class="com.github.jdha.codedivider.action.CodeDividerLineTextLeftHeavy"
                text="Code Divider - Line - Heavy - Text Left"
                description="Code Divider - Heavy line with text to left.">
            <add-to-group group-id="ToolsMenu" anchor="after"
                          relative-to-action="com.github.jdha.codedivider.action.CodeDividerLineTextRightNormal"/>
        </action>

        <action id="com.github.jdha.codedivider.action.CodeDividerLineTextCenterHeavy"
                class="com.github.jdha.codedivider.action.CodeDividerLineTextCenterHeavy"
                text="Code Divider - Line - Heavy - Text Center"
                description="Code Divider - Heavy line with text in the center.">
            <add-to-group group-id="ToolsMenu" anchor="after"
                          relative-to-action="com.github.jdha.codedivider.action.CodeDividerLineTextLeftHeavy"/>
        </action>

        <action id="com.github.jdha.codedivider.action.CodeDividerLineTextRightHeavy"
                class="com.github.jdha.codedivider.action.CodeDividerLineTextRightHeavy"
                text="Code Divider - Line - Heavy - Text Right"
                description="Code Divider - Heavy line with text to right.">
            <add-to-group group-id="ToolsMenu" anchor="after"
                          relative-to-action="com.github.jdha.codedivider.action.CodeDividerLineTextCenterHeavy"/>
        </action>

        <!-- ── Boxes ────────────────────────────────────────────────────────────────────────────────────────────── -->
        <action id="com.github.jdha.codedivider.action.CodeDividerBox"
                class="com.github.jdha.codedivider.action.CodeDividerBox"
                text="Code Divider - Box"
                description="Code Divider - Encapsulate text in box.">
            <add-to-group group-id="ToolsMenu" anchor="after"
                          relative-to-action="com.github.jdha.codedivider.action.CodeDividerLineTextRightHeavy"/>
        </action>
    </actions>

</idea-plugin>
